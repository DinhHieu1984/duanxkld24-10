    window.location.href = '/admin/companies/edit/' + companyId;
}

function toggleVerification(companyId, currentStatus) {
    const action = currentStatus ? 'remove verification from' : 'verify';
    if (confirm(`Are you sure you want to ${action} this company?`)) {
        console.log('Toggling verification status:', companyId, !currentStatus);
        // Make AJAX call to update verification status
    }
}

function viewCompany(companyId) {
    window.open('/companies/' + companyId, '_blank');
}

function viewCompanyJobs(companyId) {
    window.location.href = '/admin/joborders?company=' + companyId;
}

function deleteCompany(companyId) {
    if (confirm('Are you sure you want to delete this company? This action cannot be undone and will affect all related job postings.')) {
        console.log('Deleting company:', companyId);
        // Make AJAX call to delete
    }
}
</script>